import os
start_path = 'bbc'
fnames = os.listdir(start_path)
for fname in fnames:
    path_to_file = os.path.join(start_path, fname)
    if os.path.isfile(path_to_file):
        print('dat boi is a file')
    elif os.path.isdir(path_to_file):
        print('dat mofo is a dir')
    else:
        print('nooooo')

